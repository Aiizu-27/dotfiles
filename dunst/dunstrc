[global]
    # --- FUENTE Y TAMAÑO ---
    font = JetBrainsMono Nerd Font 10
    
    # --- GEOMETRÍA Y POSICIÓN ---
    # width = (min, max)
    width = (300, 300)
    # offset = (horizontal, vertical) - Ajusta esto para que no tape tu Polybar
    offset = 10x50
    origin = top-right
    
    # --- APARIENCIA ---
    transparency = 0   # Dejamos que el color alpha maneje la transparencia
    frame_color = "#FFFFFF"
    frame_width = 2
    corner_radius = 12 # Bordes redondeados como Rofi
    
    # Espaciado interno
    padding = 12
    horizontal_padding = 12
    text_icon_padding = 10
    
    # Iconos (Izquierda)
    icon_position = left
    min_icon_size = 32
    max_icon_size = 32
    
    # Otros
    markup = full
    sort = yes
    idle_threshold = 120
    line_height = 4
    separator_height = 2
    separator_color = frame

# --- COLORES TIPO CRISTAL (IMPORTANTE) ---
# Formato: "#RRGGBBAA" (AA es la transparencia)

[urgency_low]
    # Blanco con transparencia (CC = 80%)
    background = "#FFFFFFCC"
    foreground = "#000000"
    timeout = 10

[urgency_normal]
    # Blanco con transparencia (CC = 80%)
    background = "#FFFFFFCC"
    foreground = "#000000"
    timeout = 10

[urgency_critical]
    # Un rojo muy suave y cristalino para errores
    background = "#FFCCCCEE"
    foreground = "#000000"
    frame_color = "#FF0000"
    timeout = 0